# UniTick Environment Variables Template
# Copy this file to .env.local and fill in your values

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Smart Contract Addresses
NEXT_PUBLIC_UNITICK_CONTRACT_ADDRESS=your_unitick_token_contract_address
NEXT_PUBLIC_UNILABOOK_CONTRACT_ADDRESS=your_unilabook_contract_address

# Network Configuration
NEXT_PUBLIC_CHAIN_ID=11155111  # Sepolia testnet (change for mainnet)
NEXT_PUBLIC_RPC_URL=https://sepolia.infura.io/v3/your_infura_key

# Email Configuration (Optional - uses Supabase by default)
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password

# Analytics (Optional)
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your_vercel_analytics_id

# Development
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Production (uncomment and modify for production)
# NODE_ENV=production
# NEXT_PUBLIC_APP_URL=https://your-domain.com
